{
  "name": "@agentdoor/firebase",
  "version": "0.1.0",
  "description": "Firebase companion plugin for AgentDoor - create agent accounts as Firebase Auth users",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@agentdoor/core": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "@types/node": "^22.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xaron/agentdoor",
    "directory": "packages/firebase"
  },
  "keywords": [
    "agentdoor",
    "firebase",
    "auth",
    "agent",
    "companion"
  ]
}
