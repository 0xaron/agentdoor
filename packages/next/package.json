{
  "name": "@agentdoor/next",
  "version": "0.1.0",
  "description": "Next.js adapter for AgentDoor - edge middleware and App Router route handlers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "import": "./dist/middleware.js"
    },
    "./route-handlers": {
      "types": "./dist/route-handlers.d.ts",
      "import": "./dist/route-handlers.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@agentdoor/core": "workspace:*"
  },
  "peerDependencies": {
    "next": ">=14"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "@types/node": "^22.0.0",
    "next": "^15.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agentdoor/agentdoor",
    "directory": "packages/next"
  },
  "keywords": [
    "agentdoor",
    "next",
    "nextjs",
    "middleware",
    "agent",
    "auth",
    "edge"
  ]
}
